	"compilerOptions": {
		"strictNullChecks": true,
		"baseUrl": "src",
		"paths": {
			"@lib/*": ["lib/*"],
			"@config/*": ["config/*"],
			"@utils/*": ["utils/*"],
			"@components/*": ["components/*"],
